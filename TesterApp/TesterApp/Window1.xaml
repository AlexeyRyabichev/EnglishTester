<Window x:Class="TesterApp.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TesterApp"
        mc:Ignorable="d"
        Title="Testing..." Height="450" Width="800">
    <DockPanel  LastChildFill="True" MinWidth="400" MinHeight="300">
        <DockPanel x:Name="dockpanel1" LastChildFill="False" DockPanel.Dock="Bottom" 
                   MinHeight="50" HorizontalAlignment="Center">
        </DockPanel>
        <UniformGrid Rows="4" DockPanel.Dock="Right" MinWidth="100">
            <Button x:Name="reading" DockPanel.Dock="Top" Content="Reading"></Button>
            <Button x:Name="listening" DockPanel.Dock="Top" Content="Listening"></Button>
            <Button x:Name="writing" DockPanel.Dock="Top" Content="Writing"></Button>
            <Button x:Name="submit"  DockPanel.Dock="Top" Background="PaleVioletRed" Content="Submit" ></Button>
        </UniformGrid>
        
        <TextBlock x:Name="textbox" DockPanel.Dock="Top" Margin="5,5,5.333,5" MinWidth="100"
                  MinHeight="95">Какой то текст...</TextBlock>
        <Grid x:Name="grid" DockPanel.Dock="Top">
        </Grid>
    </DockPanel>

</Window>
