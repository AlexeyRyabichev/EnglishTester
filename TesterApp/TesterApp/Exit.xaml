<Window x:Class="TesterApp.Exit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TesterApp"
        mc:Ignorable="d"
        Title="Exit" Height="450" Width="800" Deactivated="Window_Deactivated"
        WindowStyle="None" Closing="Window_Closing">
    <WrapPanel Orientation="Vertical" HorizontalAlignment="Center">
        <TextBlock Text=" Are you sure you want to exit?" Margin="50" />
        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="YesButton" Content="   Yes   " Margin="30" BorderBrush="Blue" Click="YesButton_Click" />
            <Button x:Name="NoButton" Content="   No   " Margin="30" Click="NoButton_Click" />
        </WrapPanel>
    </WrapPanel>
</Window>